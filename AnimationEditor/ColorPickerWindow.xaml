<Window x:Name="ColorPicker" x:Class="AnimationEditor.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="ColorPickerWindow" Height="300" Width="300" Activated="OnActivate" Closing="OnClose">
    <Grid x:Name="WindowGrid">
        <xctk:ColorCanvas x:Name="Canvas" SelectedColorChanged="ColorChanged"  />
    </Grid>
</Window>
